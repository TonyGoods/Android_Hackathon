<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myapp.demomonth">

    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".View.Activity.LoginActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".View.Activity.RegisterActivity"
            android:launchMode="singleTask" />
        <activity android:name=".View.Activity.ForgotPasswordActivity" />
        <activity android:name=".View.Activity.MainActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".View.Activity.FriendActivity" />
        <activity android:name=".View.Activity.ChatActivity" />
        <activity android:name=".View.Activity.AnnouncementActivity" />
        <activity android:name=".View.Activity.AnnouncementInfoActivity" />
    </application>

</manifest>